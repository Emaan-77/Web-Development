<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<link rel="stylesheet" href="/authstyle.css">
<link href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">



<div class="container mt-5">
    <div class="row style_card">
        <h3 class="font-fam center-text">Welcome to BookWorms</h3>

        <div class="col-md-6">
            <img src="/images/signup.jpg" class="img-fluid image-style"   alt="Login Image">
        </div>
        <div class="col-md-6 d-flex align-items-center">
            <form action="" method="post" class="font-fam w-100">
                <div> 
                    <br>
                    <h4 class="font-fam center-text">Sign Up</h4>
                </div>
                <div class="flex-auth"> 
                    <h6>Name:</h6> 
                    <input type="text" class="box-underline form-control" id="name_auth" name="name" placeholder="Enter full name"/> 
                </div>
                <div class="flex-auth"> 
                    <h6>Email:</h6> 
                    <input type="text" class="box-underline form-control" id="email_auth" name="email" placeholder="Enter email"/> 
                </div>
                <div class="flex-auth ">
                    <h6>Password:</h6>
                    <input type="password" class="box-underline form-control" id="password_auth" name="password" placeholder="Enter password">
                </div>
                <div class="flex-auth mt-3">
                    <input type="submit" id="btnclick_auth" class="btn btn-primary w-100" value="Sign Up">
                </div>
            </form>
        </div>
    </div>
</div>