<div class="heading_align">
<div class="list_style"> 
<h2>
    <%= pageTitle %>
</h2>
</div>
<div class="list_Style2">
<h5>
    Page <%= page %> of <%=totalPages %>

</h5>
</div>
</div>




<div class="book-container">
    <% for (let index = 0; index < books.length; index++) { %>
        <div class="book-card">
            <div class="book-info">
                <img src="/images/<%=books[index].image %>" class="card-img-top" alt="<%= books[index].title %>">

                <h4 class="books-title"><%= books[index].title %></h4>
                <h6 class="books-title">Genre: <%= books[index].genre %></h6>
                <h6 class="books-title">Author: <%= books[index].author %></h6>
                <h6 class="books-title">Price: <%= books[index].price %></h6>
            </div>
            
            <div class="book-actions">
                <div>
                <form action="/books/<%= books[index]._id %>/edit" method="get">
                    <button type="submit">Edit</button>
                </form>
                </div>
                <div>
                <form action="/books/<%= books[index]._id %>/delete" method="post">
                    <button type="submit">Del</button>
                </form>
                </div>
            </div>
            
        </div>
    <% } %>
</div>





<div class="footer_align">
    <h5 class="list_style"> 
<ul>
    <% if (page > 1) { %>
        <li style="display: inline;">
            <a href="/books/<%= page - 1 %>" class="style_index"> &lt; </a>
        </li>
    <% } %>
    <% for (let index = 1; index <= totalPages; index++) { %>
        <li style="display: inline;">
            <a href="/books/<%= index %>" class="style_index"><%= index %></a>
        </li>
    <% } %>
    <% if (page < totalPages) { %>
        <li style="display: inline;">
            <a href="/books/<%= page + 1 %>" class="style_index"> &gt; </a>
        </li>
    <% } %>
</ul>

    </h5>
    
    </div>
    

